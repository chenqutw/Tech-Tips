%h1.page_title Tip

.mt30
  .tip-content
    %p.tip-show
      %b Question:
      = @tip.title
    %p.tip-show
      %b Author:
      = @tip.author

    %p.tip-show
      %br
      %b Answer:
      %p.tip-show
        = @tip.content

%h3.mt50
  = link_to 'Edit', edit_tip_path(@tip), class: "mr20"
  = link_to 'Delete', tip_path(@tip), method: :delete, confirm: "Delete this tip will also delete relative discussion at the same time. Are you sure?", class: "mr20"
  = link_to 'Relative discussion', discussion_path(@discussion), class: "mr20"


